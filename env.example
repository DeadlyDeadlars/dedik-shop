TELEGRAM_BOT_TOKEN=               # required: Telegram bot token
CRYPTOBOT_TOKEN=                  # required: to create invoices and fetch live rates
CRYPTOBOT_WEBHOOK_SECRET=         # optional: required if using webhook notifications
DATABASE_URL=sqlite:///shop.sqlite3  # required: SQLite file path or Postgres URL
ADMIN_IDS=                        # optional: comma-separated admin Telegram IDs (e.g. 123,456)
RUB_USDT_RATE=100                 # optional fallback; live rate comes from CryptoBot
PORT=8080                         # optional: aiohttp server port for webhook

